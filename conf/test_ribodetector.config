/*
========================================================================================
    Nextflow config file for running minimal tests
========================================================================================
    Defines input files and everything required to run a fast and simple pipeline test.
    Use as follows:
        nextflow run nf-core/mag -profile test_ribodetector,<docker/singularity> --outdir <OUTDIR>
----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile for running ribosomal RNA removal with RiboDetector'
    config_profile_description = 'Minimal test dataset to check pipeline function ribosomal removal'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input                       = 'https://raw.githubusercontent.com/nf-core/test-datasets/mag/samplesheets/samplesheet.csv'
    remove_rrna                 = true

    // For computational efficiency
    gtdb                        = false
    skip_binning                = true
    skip_prokka                 = true
    skip_spades                 = true
    skip_megahit                = true
    skip_spadeshybrid           = true
    skip_quast                  = true
    skip_prodigal               = true
    skip_krona                  = true
    skip_adapter_trimming       = true
    skip_metabat2               = true
    skip_maxbin2                = true
    skip_busco                  = true
}